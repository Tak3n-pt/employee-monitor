{
  "name": "employee-monitor-admin",
  "version": "1.0.0",
  "description": "Employee Monitoring System - Admin Panel",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run server\" \"wait-on http://localhost:3847 && electron .\"",
    "server": "node server/index.js",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "rebuild": "npx @electron/rebuild"
  },
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.employee-monitor.admin",
    "productName": "Employee Monitor Admin",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "server/**/*",
      "public-new/**/*",
      "data/.gitkeep",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "screenshots",
        "to": "screenshots",
        "filter": [".gitkeep"]
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": false
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.8",
    "pdfkit": "^0.15.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0"
  }
}
